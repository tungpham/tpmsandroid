<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorPink</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="BaseTheme.Toolbar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="ViewCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ViewMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextDisplay" parent="ViewCommon">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="TextEmail" parent="ViewCommon">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="TextMoreOption" parent="ViewCommon">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>


    <style name="TextSmsBase" parent="ViewCommon">
        <item name="android:layout_marginLeft">@dimen/item_sms_margin_left</item>
        <item name="android:layout_marginRight">@dimen/item_sms_margin_left</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextSmsTitle" parent="TextSmsBase">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
    </style>

    <style name="TextSmsDescription" parent="TextSmsBase">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="TextMessageBody" parent="ViewCommon">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="TextSmsTime" parent="TextSmsBase">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="ButtonCommon" parent="ViewMatch">
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="ButtonWhite" parent="ButtonCommon">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/selector_button_white</item>
    </style>

    <style name="ButtonBlue" parent="ButtonCommon">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_button_blue</item>
    </style>

    <style name="TextTermsServices" parent="ViewCommon">
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextAuthenticationTitle" parent="ViewCommon">
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="TextAuthenticationDescription" parent="ViewCommon">
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material</item>
    </style>

    <style name="TextAuthenticationField" parent="ViewCommon">
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="EditTextAuthentication" parent="ViewMatch">
        <item name="android:layout_marginLeft">@dimen/edit_text_margin</item>
        <item name="android:layout_marginRight">@dimen/edit_text_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material</item>
    </style>

    <style name="ButtonAuthenticationNext" parent="ViewCommon">
        <item name="android:src">@drawable/ic_arrow_right_green</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="DialtactsDigitsTextAppearance">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">@dimen/dialpad_digits_text_size</item>
        <item name="android:freezesText">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:editable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="DialtactsDialpadButtonStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="DialpadHorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialpad_vertical_margin</item>
        <item name="android:background">#66000000</item>
    </style>

    <style name="Divider" parent="ViewMatch">
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="TextNumber" parent="ViewMatch">
        <item name="android:paddingLeft">@dimen/activity_main_margin</item>
        <item name="android:paddingRight">@dimen/activity_main_margin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextNumberItem" parent="TextNumber">
        <item name="android:layout_height">72dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextToolbar" parent="ViewCommon">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ImageActionCommon">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ImageAction">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DividerAction" parent="ViewMatch">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="TextActionCommon">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingLeft">@dimen/activity_main_margin</item>
        <item name="android:drawablePadding">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextBuyANumberTitle" parent="ViewCommon">
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="SpinnerBuyANumberItem" parent="ViewMatch">
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="FloatingButton" parent="ViewCommon">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="RelativeInCall" parent="ViewCommon">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextSettingDisplay" parent="ViewCommon">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:layout_marginTop">@dimen/text_display_margin_top</item>
    </style>

    <style name="TextSetting" parent="ViewMatch">
        <item name="android:paddingLeft">@dimen/activity_main_margin</item>
        <item name="android:paddingRight">@dimen/activity_main_margin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSettingItem" parent="TextSetting">
        <item name="android:layout_height">72dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppGuestToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ItemToolbarRelative" parent="ViewCommon">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/tb_item_selector</item>-->
    </style>

    <style name="ItemToolbarText" parent="ViewCommon">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="ItemToolbarTextTitle" parent="ViewCommon">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="RelativeSetting" parent="ViewMatch">
        <item name="android:paddingLeft">@dimen/activity_main_margin</item>
        <item name="android:paddingRight">@dimen/activity_main_margin</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="SwitchSettingItem" parent="ViewCommon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TextTorrentSettingItem" parent="ViewMatch">
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTorrentSettingSummary" parent="ViewMatch">
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextSettingCategory" parent="TextSetting">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextUsageValueSpent" parent="ViewCommon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/colorPink</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextUsageValue" parent="ViewCommon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextUsageTitle" parent="ViewMatch">
        <item name="android:layout_marginRight">@dimen/activity_main_margin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
