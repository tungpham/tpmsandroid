<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ethan.morephone.widget.MyTextView
        android:id="@+id/text_purchase_phone_number"
        style="@style/TextSettingDisplay"
        android:text="@string/add_fund_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_purchase_phone_number"
        android:layout_marginTop="@dimen/activity_vertical_margin">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_purchase_add_fund"
        style="@style/ButtonBlue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:visibility="gone"
        android:text="@string/add_fund_button" />

</RelativeLayout>